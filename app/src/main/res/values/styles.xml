<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LocationText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/location_padding</item>
    </style>

    <style name="AddressText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/address_padding</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">@dimen/description_text</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/location_padding</item>
    </style>

    <style name="DescriptionContent">
        <item name="android:textSize">@dimen/description_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/location_padding</item>
    </style>

</resources>